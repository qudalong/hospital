page {
  background: #f0f0f0;
  font-size: 30rpx;
}

.hover {
  opacity: 0.7;
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

button {
  background-color: #fff;
  border-radius: 0;
}

button::after {
  border: none;
}

.clearfix::after {
  content: '';
  clear: both;
  height: 0;
}

/* 公共title */

.hd {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  margin-top: 10rpx;
}

.hd .title text {
  font-weight: bold;
}

.hd .more text {
  color: #9999FF;
}

.hd .iconfont {
  font-size: 54rpx;
}

.hb {
  background: #fff;
  padding: 30rpx;
}

.hb .item {
  display: flex;
  align-items: center;
  justify-content: start;
  padding-bottom: 30rpx;
}

.hb .item .cover-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.hb .item .cover-img image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.hb .item .row-1 {
  display: flex;
  flex-direction: column;
  align-content: center;
  flex: 1;
}

.hb .item .title {
  flex: 1;
}

/* 图标 */
.icon-title {
  display: flex;
  align-items: center;
}

.lister_news_icon, .lister_knowhow_icon, .lister_history_icon,
.lister_doctorlist_icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 2rpx;
}

.lister_notice_icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}

.my_personalinformation_icon, .my_my_icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.file_add_btn {
  width: 54rpx;
  height: 54rpx;
}

.file_add_icon, .add_btn {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
}

.add_btn {
  margin-right: 0;
}

.more {
  display: flex;
  align-items: center;
}

.right_btn {
  width: 30rpx;
  height: 30rpx;
}
